# Application
APP_NAME=MSK FastAPI

# Kafka / AWS MSK connection
# For AWS MSK with TLS-only: set SECURITY_PROTOCOL=SSL and provide AmazonRootCA1.pem
# For SASL (e.g., Confluent Cloud or MSK with SCRAM): use SASL_SSL and set username/password
KAFKA_BOOTSTRAP_SERVERS=b-1.owl1.m2bnmw.c3.kafka.us-east-2.amazonaws.com:9098,b-3.owl1.m2bnmw.c3.kafka.us-east-2.amazonaws.com:9098,b-2.owl1.m2bnmw.c3.kafka.us-east-2.amazonaws.com:9098
KAFKA_SECURITY_PROTOCOL=SASL_SSL
# Options: PLAIN, SCRAM-SHA-256, SCRAM-SHA-512 (IAM auth via OAUTHBEARER is not configured here)
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=<api_key_or_username>
KAFKA_SASL_PASSWORD=<api_secret_or_password>
# Provide Amazon Root CA if needed (download from AWS docs)
KAFKA_SSL_CA_LOCATION=./certs/AmazonRootCA1.pem

# Client settings
KAFKA_CLIENT_ID=msk-fastapi
KAFKA_TOPIC_DEFAULT=events
KAFKA_CONSUMER_GROUP_ID=msk-fastapi-group
KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_IDEMPOTENCE=true
KAFKA_DELIVERY_TIMEOUT_MS=120000
# Comma-separated extra topics for consumer to subscribe
# KAFKA_EXTRA_TOPICS=events-dlq,metrics